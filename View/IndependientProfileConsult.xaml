<Page x:Class="Employex.View.IndependientProfileConsult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Converter="clr-namespace:Employex.Utilities"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="Profile consult" Background="#E6E1E1">
    <Page.Resources>
        <Converter:ByteToImageConverter x:Name="binaryConverter" x:Key="byteToImageConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ProgressBar
            x:Name="ProgressBar"
            Style="{DynamicResource MaterialDesignCircularProgressBar}"
            IsIndeterminate="True"
            Foreground="#004AAD"
            Width="100" Height="100"
            Grid.Row="1" />

        <ScrollViewer x:Name="ProfileScrollViewer" Grid.Column="0" Grid.Row="0" Grid.RowSpan="7" Width="1080" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Grid.Column="0"
                                  Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="7" VerticalAlignment="Stretch" 
                                  HorizontalAlignment="Stretch" Margin="10 20 10.4 70" CornerRadius="10 10 0 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                            <GradientStop Color="#004AAD" Offset="1" />
                            <GradientStop Color="#191626" Offset="0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>


                <materialDesign:ColorZone Mode="Custom" Background="White" Grid.Column="0"
                                  Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="7" VerticalAlignment="Stretch" 
                                  HorizontalAlignment="Stretch" Margin="10 70 10 20" CornerRadius="0 0 10 10" Height="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock 
                            Style="{DynamicResource MaterialDesignHeadline4TextBlock}"
                            Grid.Column="0"
                            Grid.Row="0"
                            FontWeight="Bold" 
                            Foreground="#2A2A2A"
                            HorizontalAlignment="Left"
                            Margin="15 0 0 0" 
                            Text="Omar Baltazar Islas"
                            TextAlignment="Left"
                            TextWrapping="WrapWithOverflow" 
                            VerticalAlignment="Center" 
                            x:Name="NameTextBlock" >
                        </TextBlock>
                        
                        <TextBlock 
                            Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                            Grid.Column="0"
                            Grid.Row="1"
                            FontWeight="DemiBold" 
                            Foreground="#2A2A2A"
                            HorizontalAlignment="Left" 
                            Margin="15 5 0 0"
                            Text="Jardinero"
                            TextWrapping="WrapWithOverflow"
                            TextAlignment="Left" 
                            VerticalAlignment="Center"
                            x:Name="OcupationTextBlock">
                        </TextBlock>

                        <TextBlock 
                            Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                            Foreground="#2A2A2A"
                            Grid.ColumnSpan="1"
                            Grid.Row="2"
                            Grid.Column="0"
                            HorizontalAlignment="Left" 
                            Margin="15 5 0 0" 
                            Text="Xalapa, Veracruz"
                            TextAlignment="Left"
                            TextWrapping="WrapWithOverflow" 
                            VerticalAlignment="Center" 
                            x:Name="LocationTextBlock">
                        </TextBlock>

                        <TextBlock 
                            FontSize="16" 
                            FontWeight="Medium" 
                            Foreground="#2A2A2A"
                            Grid.Column="0"
                            Grid.ColumnSpan="2" 
                            Grid.Row="3" 
                            HorizontalAlignment="Left" 
                            Margin="15 20 0 10" 
                            Text="Descripción"
                            TextAlignment="Left"
                            TextWrapping="WrapWithOverflow" 
                            VerticalAlignment="Center" 
                            x:Name="DescriptionTextBlock" >
                        </TextBlock>

                        <Button
                            x:Name="NewSectionButton"
                            Style="{DynamicResource PrimaryButton }"
                            Content="Añadir nueva sección"
                            Grid.Column="2"
                            Grid.Row="3"
                            Width="200"
                            Height="30"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0 0 10 0">
                        </Button>
                    </Grid>
                </materialDesign:ColorZone>

                <Ellipse Grid.Column="3" Grid.Row="1" Height="160" Width="160" HorizontalAlignment="Center">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="White" />
                    </Ellipse.Fill>
                </Ellipse>

                <Ellipse Grid.Column="3" Grid.Row="1" Height="150" Width="150" HorizontalAlignment="Center">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="perfilImage" ImageSource="/Utilities/Images/defaultAvatar.jpg" Stretch="Uniform"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
